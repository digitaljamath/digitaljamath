# DigitalJamath Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Django Settings
# ============================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=*
DOMAIN_NAME=localhost

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_NAME=digitaljamath_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ============================================
# Brevo SMTP (Email)
# ============================================
# Sign up at https://www.brevo.com/
# Get SMTP credentials from: Settings > SMTP & API > SMTP

BREVO_EMAIL_USER=your-brevo-login-email@example.com
BREVO_SMTP_KEY=xsmtpsib-your-smtp-key-here
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Alternative: Use console backend for development (no emails sent)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ============================================
# Frontend URL (for email links)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# JWT Settings (optional overrides)
# ============================================
# ACCESS_TOKEN_LIFETIME=60  # minutes
# REFRESH_TOKEN_LIFETIME=1  # days

# ============================================
# AI/Basira Settings (future)
# ============================================
# AI/Basira Settings (future)
# ============================================
# Basira AI Guide (OpenRouter)
OPENROUTER_API_KEY=your-openrouter-api-key-here

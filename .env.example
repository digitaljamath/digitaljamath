# DigitalJamath Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Django Settings
# ============================================
SECRET_KEY=change-this-to-a-long-random-string-50-chars-minimum
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Domain (for multi-tenancy)
# ============================================
DOMAIN_NAME=localhost

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_NAME=digitaljamath_db
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ============================================
# Brevo SMTP (Email)
# ============================================
# Sign up at https://www.brevo.com/
# Get SMTP credentials from: Settings > SMTP & API > SMTP

BREVO_EMAIL_USER=your-brevo-login-email@example.com
BREVO_SMTP_KEY=xsmtpsib-your-smtp-key-here
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ============================================
# Frontend URL (for email links)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# AI/Basira Settings (optional)
# ============================================
OPENROUTER_API_KEY=your-openrouter-api-key-here
